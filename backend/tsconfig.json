{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "erasableSyntaxOnly": false
  },
  "include": ["src/**/*", "src/middlewares/hasPermissionsMiddleware.ts"]
}
